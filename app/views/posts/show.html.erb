<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<h3>Category</h3>
<p><%= @post.categories.pluck(:name).join(", ") %></p>

 <!--  Comments   -->

<h3>Comments</h3>
<% @post.comments.each do |c| %>
  <div><%= c.user.username + " says: " + c.content %></div>
<% end %>

<h3>Commentors</h3>
<p>
  <% @post.commentors.each do |c| %>
    <%= link_to c.username, c %><%= ', ' if c != @post.commentors.last %>
  <% end %>
</p>

<h3>New Comment </h3>
<%= form_for @comment do |f| %>

  <%= f.hidden_field :post_id, value: @post.id %>

  <%= f.label :user_id %> <%= f.collection_select :user_id, User.all, :id, :username %> or New User


  <br><br>
  <%= f.label :content %> <br>
  <%= f.text_area :content %> <br>

  <%= f.submit %>
<% end %>
